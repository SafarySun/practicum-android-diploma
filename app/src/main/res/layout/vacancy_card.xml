<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?android:windowBackground"
    android:layout_marginHorizontal="@dimen/padding_horizontal_size_16"
    android:layout_marginVertical="10dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/test_image"
        tools:ignore="ContentDescription" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="60dp">
    <TextView
        android:id="@+id/vacancy_name"
        style="@style/Text_Medium_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Разработчик Енота в банке для сервисов гоголь почты, Бобруйск"/>
<TextView
    android:id="@+id/company_name"
        style="@style/Text_Regular_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Авиаслалис"/>
    <TextView
        android:id="@+id/salary"
        style="@style/Text_Regular_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "до 118 рублей в неделю"/>
</LinearLayout>
</FrameLayout>
